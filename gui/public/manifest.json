{
  "manifest_version": 3,
  "name": "BrainWave Focus",
  "version": "1.0",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "http://www.youtube.com/*",
        "http://youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "index.html"
  }
}
